                                 </children>
                              </HBox>
                              <HBox layoutX="10.0" layoutY="158.0" prefHeight="60.0" prefWidth="640.0">
                                 <children>
                                    <Button id="btnAgregarDpto" mnemonicParsing="false" onAction="#guardarEmpleado" prefHeight="25.0" prefWidth="265.0" text="Agregar Empleado" HBox.hgrow="ALWAYS" />
                                    <Button id="onModificarDpto" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#modificarEmpleado" prefHeight="25.0" prefWidth="269.0" text="Modificar Empleado" HBox.hgrow="ALWAYS" />
