<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>es.iesjulianmarias</groupId>
	<artifactId>ut2_ejercicio17</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<dependencies>
		<!-- https://mvnrepository.com/artifact/mysql/mysql-connector-java -->
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>8.0.33</version>
		</dependency>
		<!-- JavaFX Controls. Incluye todos los componentes visuales: Button,
		TextField… -->
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-controls</artifactId>
			<version>21</version>
		</dependency>
		<!-- JavaFX FXM. Permite trabajar con archivos fxml que definen la
		interfaz y se vinculan con controladores java -->
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-fxml</artifactId>
			<version>21</version>
		</dependency>


	</dependencies>

	<properties>
		<!--version de javafx que se usará -->
		<javafx.version>21</javafx.version>
		<!--el código fuente está escrito para Java 17 -->
		<maven.compiler.source>21</maven.compiler.source>
		<!--el bytecode generado será compatible con Java 17 -->
		<maven.compiler.target>21</maven.compiler.target>
	</properties>
	<!--plugin que permite ejecutar la aplicación JavaFX directamente desde Maven sin tener que configurar argumentos de la Virtual Machine -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.openjfx</groupId>
				<artifactId>javafx-maven-plugin</artifactId>
				<version>0.0.8</version>
				<configuration>
					<!--Indicamos la clase principal que contiene el método main() y extiende Application 
					ruta relativa a partir de src/main/java-->
					<mainClass>ut2_ejercicio17.main.Main</mainClass> <!-- Cambia esto por tu clase principal -->
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>